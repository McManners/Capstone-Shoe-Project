<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- Top bar with menu and search icon -->
    <LinearLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1DA756"
        android:orientation="horizontal">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_listView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_emptyText"
            android:text="No Results"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/AR_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:tint="#FFFFFF"
            android:src="@drawable/play_store_512"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPECIAL OFFER"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!-- Search by brand caption -->
    <TextView
        android:id="@+id/search_by_brand_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Brand"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/AR_layout"
        android:padding="10dp"/>

    <!-- HorizontalScrollView for shoe images -->
    <HorizontalScrollView
        android:id="@+id/shoe_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/search_by_brand_caption"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#3C413F">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/nike_homepage"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_7741"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_7742"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/play_store_512"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/play_store_512"
                android:padding="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>